{
    "manifest_version": 3,
    "name": "Twitch Channel Point Bonus Clicker",
    "description": "Automatically claim bonus channel points. Whenever the little \"Click to claim a bonus!\" button appears, we'll click it for you",
    "version": "0.0.1",
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "js": [
                "script.js"
            ]

        }
    ]
}